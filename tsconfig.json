{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"outDir": "./lib",
		"declaration": true,
		"declarationDir": "./typings",
		"module": "commonjs", //tsc will throw ES6 module error if setting 'es6' in there
		"target": "es6",
		"jsx": "react",
		"typeRoots": ["node_modules/@types", "./typings/*"],
		"baseUrl": ".",
		"paths": {}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "./typings/**/*"]
}
